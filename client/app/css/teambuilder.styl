.teambuilder
  position absolute
  top 0
  bottom 0
  left 0
  right 0

  select, input
    margin-bottom 0!important

.teambuilder .navigation
  position absolute
  top 0
  bottom 0
  background-color $body-color
  width: 150px

  ul
    list-style-type none
    padding 0
    margin 0

  li, .nav-button
    display block
    padding 6px 0 6px 1em
    height 32px
    line-height @height

  li:hover, .nav-button:hover
    cursor pointer
    background-color rgba(0, 0, 0, 0.1)

  li.active
    background-color rgba(200, 210, 255, 0.5)

  .pokemon_icon
    float none
    display inline-block
    margin 0
    vertical-align middle

.teambuilder .nature_ability_item
  display table
  margin 1.5em 0

  div
    display table-row
    line-height 1.5em
    
  span, input, select
    display: table-cell

.teambuilder .stats
  margin-bottom 1.5em

  td, th
    text-align left
    padding-right 10px
    white-space nowrap
    line-height 1.5em
    height 1.5em

  input
    width 100%!important
    box-sizing border-box

.teambuilder .pokemon_edit
  position absolute
  overflow: auto
  left 150px
  top 0
  bottom 0
  right 0
  background white
  padding 15px

.teambuilder .selected_moves
  .move-button, input
    display block
    margin 0
    box-sizing border-box
    height 32px

.teambuilder .table-moves
  tbody tr
    cursor pointer
